{% if template contains 'product' %}
  <meta property="og:image" content="http:{{ product.featured_image.src | product_img_url: '1024x1024' }}" />
  <meta property="og:image:secure_url" content="https:{{ product.featured_image.src | product_img_url: '1024x1024' }}" />
{% elsif template contains 'article' %} 
  {% assign img_tag = '<' | append: 'img' %}
  {% if article.content contains img_tag %}
    {% assign src = article.content | split: 'src="' %}
    {% assign src = src[1] | split: '"' | first | remove: 'https:' | remove: 'http:' %}
    {% if src %}
      <meta property="og:image" content="http:{{ src }}" />
      <meta property="og:image:secure_url" content="https:{{ src }}" />
    {% endif %}
  {% endif %}
{% elsif template contains 'gift-guide' %}
  <meta property="og:image" content="http:{{ 'perfect_match.png' | asset_url }}" />
  <meta property="og:description" content="We've matched each of the 16 different MBTI personalities with a pair of our sunglasses. Take the quiz below to get your perfect, very scientific match (and see which famous people share your personality type)." />
  <meta property="og:title" content="Which pair of sunglasses matches your personality?" />
{% else %}
  {% if settings.use_logo %}
    <meta property="og:image" content="http:{{ 'logo.png' | asset_url }}" />
    <meta property="og:image:secure_url" content="https:{{ 'logo.png' | asset_url }}" />
  {% endif %}
{% endif %}