<script>
/* Wait until everything's loaded. */

  $(window).load(function(){
    $('.spinner').addClass('hidden');
    $('#content').removeClass('hidden');
  });
  
  
/* Hide stockist listings until region selected. */

$( document ).ready( function() {
  $( '#canada' ).hide();
  $( '#europe' ).hide();
  $( '#asia' ).hide();
  $( '#header-canada' ).hide();
  $( '#header-europe' ).hide();
  $( '#header-asia' ).hide();
});

/* Show store information when region selected. */

  $('#region-select').change(function() {
    /* hide everything */
    $('.region').hide();
    $('#header h1').hide();
    /* show the selected region */
    var region = $( "#region-select option:selected" ).val();
    $('#' + region).show();
    $('#header-' + region).show();
  });

  
</script>