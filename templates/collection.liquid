<div id='collections-listing' class='fluid-container'>
    <div class='row'>
      {% include 'grid-navbar' %}
      {% include 'grid-nav-left' %}
      <section id='product-grid-container' class='col-xs-12 col-sm-12 col-md-8 col-lg-8'>
        {% paginate collection.products by 48 %}
        <ul id='product-grid' class='row row-no-padding'>
          {% for product in collection.products %}
              {% include 'product-grid-item' %}
	      {% endfor %}
          </ul>
        <p id='pagination'>
          {{ paginate | default_pagination }}
        </p>
        {% endpaginate %}
      </section>
    </div>
</div>