@charset "UTF-8";


/* Bootstrap breakpoints. */

$screen-sm-min: 768px;
$screen-xs-max: ($screen-sm-min - 1);
$screen-md-min: 992px;
$screen-sm-max: ($screen-md-min - 1);
$screen-lg-min: 1200px;
$screen-md-max: ($screen-lg-min - 1);
$screen-xl-min: 1600px;
$screen-lg-max: ($screen-xl-min - 1);
$screen-xxl-min: 2200px;
$screen-xl-max: ($screen-xxl-min - 1);


/* A few high-level styles, mostly having to do with fonts. */ 
 
body {
  font-family: 'WWLstandard', sans-serif;
  font-weight: normal;
}

h1 {
  font-family: 'WWLheavy', sans-serif;
  font-size: 16px;
}

h2 {
  border-top: 1px solid #777;
  border-bottom: 1px solid #777;
  padding-left: 0px;
  padding-top: 10px;
  padding-bottom: 0px;
  font-family: 'WWLheavy';
  font-size: 18px;
  color: #777;
  width: 100%;
}

a {
  color: #333;
  text-decoration: underline;
  &:hover {
    color: white;
    background-color: black;
  }
}

area:hover {
  cursor: pointer;
}

b, strong {
  font-family: 'WWLheavy', sans-serif;
  font-weight: normal;
}

.hidden {
  display: none;
  visibility: hidden;
}

#email-popup {
  display: none;
}


/* Containers for the Bootstrap grid. Includes standard responsive container, and a fluid container that expands to the full width of large desktop screens. */

.container, .fluid-container {
  margin-bottom: 60px;
}

.fluid-container {
  padding-left: 1px;
  padding-right: 15px;
  margin-left: auto;
  margin-right: auto;
  margin-top: 40px;
}


/* Styles for two-column pages, used primarily for product pages. */

.left-col {
  padding-top: 50px;
}

.left-col img {
  max-width: 100%;
} 

.right-col {
  padding-top: 60px;
  padding-bottom: 40px;
  text-align: center;
  @media only screen and (max-width: $screen-sm-max) {
    padding-top: 10px;
    padding-bottom: 10px;
  }
}

/* Styles for the top navigation menu. */
 
.navbar {
  border: none;
}

#header-ribbon {
  width: 100%;
  background-color: black;
  text-align: center;
  padding-top: 5px;
  font-family: 'WWLlogo';
