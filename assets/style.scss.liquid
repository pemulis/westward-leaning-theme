    color: white;
    text-decoration: none;
  }
}

.navbar-brand, .navbar-header {
  background-color: #333;
}

.navbar-brand {
  font-family: 'WWLlogo';
  text-decoration: none;
  text-transform: uppercase;
  color: white;
}

#top-menu, #sticky-mini-menu {
  background-color: #222;
  margin: 0 auto;
  z-index: 3;
  li a {
    font-family: 'WWLheavy', sans-serif;
    font-size: 12px;
    color: #BBB;
    text-decoration: none;
    padding-top: 16px;
    padding-bottom: 15px;
    &:hover {
      color: black;
      background-color: #DDD;
    }
  }
}

#top-menu {
  position: relative;
  text-transform: uppercase;
  letter-spacing: 1px;
}

#sticky-mini-menu {
  letter-spacing: 1px;
  position: fixed;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 0px;
  text-transform: uppercase;
  nav {
    background-color: #222;
  }
  .navbar {
    -moz-border-radius: 0px;
    -webkit-border-radius: 0px;
    border-radius: 0px;
  }
}

.cart-link {
  margin-left: 100px;
  margin-right: -170px;
}

.dropdown-menu {
  background-color: #DDD;
  padding: 0;
  margin: 0;
  border: none;
}

@media only screen and (min-width: $screen-sm-min) {
  .navbar-nav {
    float: none;
    margin: 0 auto;
    display: table;
    table-layout: fixed;
  }
  
  #top-menu, #sticky-mini-menu {
    li.dropdown.open {
      color: black;
      background-color: #DDD;
    }
  }
  
  #top-menu .dropdown-menu, #sticky-mini-menu .dropdown-menu {
    li {
      background-color: #DDD;
      a {
        color: black;
        &:hover {
          background-color: #EEE;
        }
      }
    }
  }
}

@media only screen and (max-width: $screen-xs-max) {
  #top-menu .dropdown-menu {
    padding-left: 24px;
  }
}

