@charset "UTF-8";


/* Bootstrap breakpoints. */

$screen-sm-min: 768px;
$screen-xs-max: ($screen-sm-min - 1);
$screen-md-min: 992px;
$screen-sm-max: ($screen-md-min - 1);
$screen-lg-min: 1200px;
$screen-md-max: ($screen-lg-min - 1);
$screen-xl-min: 1600px;
$screen-lg-max: ($screen-xl-min - 1);


/* A few high-level styles, mostly having to do with fonts. */ 
 
body {
  font-family: 'WWLstandard', sans-serif;
  font-weight: normal;
}

h1 {
  font-family: 'WWLheavy', sans-serif;
  font-size: 26px;
}

h2 {
  border-top: 1px solid #777;
  border-bottom: 1px solid #777;
  padding-left: 0px;
  padding-top: 10px;
  padding-bottom: 10px;
  font-family: 'WWLheavy';
  font-size: 18px;
  color: #777;
  width: 100%;
}

a {
  color: #333;
  text-decoration: underline;
  &:hover {
    color: white;
    background-color: black;
  }
}

area:hover {
  cursor: pointer;
}

b, strong {
  font-family: 'WWLheavy', sans-serif;
  font-weight: normal;
}

.hidden {
  display: none;
  visibility: hidden;
}

#email-popup {
  display: none;
}


/* Containers for the Bootstrap grid. Includes standard responsive container, and a fluid container that expands to the full width of large desktop screens. */

.container, .fluid-container {
  margin-bottom: 60px;
}

.fluid-container {
  padding-left: 1px;
  padding-right: 15px;
  margin-left: auto;
  margin-right: auto;
  margin-top: 40px;
}


/* Styles for two-column pages. NOTE: THIS IS USED ONLY IN PDPs, I THINK. SHOULD BE REFACTORED TO REFLECT THAT. */

.left-col {
  padding-top: 50px;
}

.left-col img {
  max-width: 100%;
} 

.right-col {
  padding-top: 60px;
  padding-bottom: 40px;
  text-align: center;
  @media only screen and (max-width: $screen-sm-max) {
    padding-top: 10px;
    padding-bottom: 10px;
  }
}

/* Styles for the top navigation menu. */

.navbar {
  border: none;
}

#header-ribbon {
  width: 100%;
  background-color: black;
  text-align: center;
  padding-top: 5px;
  font-family: 'WWLlogo';
  font-weight: normal;
  a {
    font-size: 28px;
    color: white;
    text-decoration: none;
  }
}

.navbar-brand, .navbar-header {
  background-color: #333;
}

.navbar-brand {
  font-family: 'WWLlogo';
  text-decoration: none;
  color: white;
}

#top-menu, #sticky-mini-menu {
  background-color: #222;
  margin: 0 auto;
  z-index: 3;
  li a {
    font-family: 'WWLheavy', sans-serif;
    font-size: 12px;
    color: #BBB;
    text-decoration: none;
    padding-top: 16px;
    padding-bottom: 15px;
    &:hover {
      color: black;
      background-color: #DDD;
    }
  }
}

#top-menu {
  position: relative;
  text-transform: uppercase;
  letter-spacing: 1px;
}

#sticky-mini-menu {
  letter-spacing: 1px;
  position: fixed;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 0px;
  text-transform: uppercase;
  nav {
    background-color: #222;
  }
  .navbar {
    -moz-border-radius: 0px;
    -webkit-border-radius: 0px;
    border-radius: 0px;
  }
}

.cart-link {
  margin-left: 100px;
  margin-right: -170px;
}

.dropdown-menu {
  background-color: #DDD;
  padding: 0;
  margin: 0;
  border: none;
}

@media only screen and (min-width: $screen-sm-min) {
  .navbar-nav {
    float: none;
    margin: 0 auto;
    display: table;
    table-layout: fixed;
  }
  
  #top-menu, #sticky-mini-menu {
    li.dropdown.open {
      color: black;
      background-color: #DDD;
    }
  }
  
  #top-menu .dropdown-menu, #sticky-mini-menu .dropdown-menu {
    li {
      background-color: #DDD;
      a {
        color: black;
        &:hover {
          background-color: #EEE;
        }
      }
    }
  }
}

@media only screen and (max-width: $screen-xs-max) {
  #top-menu .dropdown-menu {
    padding-left: 24px;
  }
}


#free-shipping-banner, #free-shipping-banner-collection , #free-shipping-banner-index {
  background-color: white;
  width: 100%;
  height: 14px;
  margin-bottom: 0;
